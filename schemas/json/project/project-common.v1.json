{
  "$id": "https://nuvo-code.github.io/observer-contracts/schemas/json/project/project-common.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Project Snapshot v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "integer", "minimum": 1 },
    "name": { "type": "string", "minLength": 2, "maxLength": 191 },
    "domain": {
      "type": "string",
      "minLength": 3,
      "maxLength": 191,
      "pattern": "^(?!-)([A-Za-z0-9-]{1,63}\\.)+[A-Za-z]{2,}$"
    },
    "endpoints": {
      "type": "array",
      "items": { "type": "string", "format": "uri" },
      "uniqueItems": true,
      "default": []
    },
    "is_active": { "type": "boolean", "default": true },
    "verification_status": {
      "type": "string",
      "enum": ["pending", "verified", "failed"],
      "default": "pending"
    },
    "verification_method": { "type": ["string", "null"] },
    "created_at": { "type": ["string", "null"], "format": "date-time" },
    "updated_at": { "type": ["string", "null"], "format": "date-time" },
    "verified_at": { "type": ["string", "null"], "format": "date-time" }
  },
  "required": ["id", "name", "domain"]
}